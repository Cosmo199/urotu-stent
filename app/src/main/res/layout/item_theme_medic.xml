<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutItemMedic"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_medic"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/view_medic_bg"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_view_medic"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:src="@color/colorPrimary" />

        <TextView
            android:id="@+id/name_medic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="103dp"
            android:layout_marginLeft="83dp"
            android:layout_marginTop="20dp"
            android:text="Name | medic"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/department_medic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_medic"
            android:layout_marginStart="103dp"
            android:layout_marginLeft="83dp"
            android:layout_marginTop="10dp"
            android:text="แผนก: ศัลยกรรม"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/email_medic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/department_medic"
            android:layout_marginStart="130dp"
            android:layout_marginLeft="83dp"
            android:layout_marginTop="10dp"
            android:text="karn@gmail.com"
            android:textSize="15dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/department_medic"
            android:layout_marginStart="103dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_baseline_email_24"

            />


    </RelativeLayout>


</LinearLayout>